<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ButtonBase" parent="android:Widget.Button">
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="ButtonBase.ButtonRed">
        <item name="android:background">@drawable/red</item>
    </style>

    <style name="ButtonBase.ButtonBlue">
        <item name="android:background">@drawable/blue</item>
    </style>

    <style name="ButtonBase.ButtonBlueLight">
        <item name="android:background">@drawable/blue_light</item>
    </style>

    <style name="ButtonBase.ButtonGreen">
        <item name="android:background">@drawable/green</item>
    </style>

    <style name="ButtonBase.ButtonViolet">
        <item name="android:background">@drawable/violet</item>
    </style>

    <style name="ButtonBase.ButtonRedDark">
        <item name="android:background">@drawable/red_dark</item>
    </style>

    <style name="ButtonBase.ButtonGray">
        <item name="android:background">@drawable/gray</item>
    </style>

    <style name="ButtonBase.ButtonLogin">
        <item name="android:background">@drawable/blue_solid</item>
    </style>

</resources>