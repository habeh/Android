<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ButtonBase" parent="android:Widget.Button">
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="ButtonBase.ButtonRed">
        <item name="android:background">@drawable/background_selector_red</item>
    </style>

    <style name="ButtonBase.ButtonBlue">
        <item name="android:background">@drawable/background_selector_blue</item>
    </style>

    <style name="ButtonBase.ButtonBlueLight">
        <item name="android:background">@drawable/background_selector_cyan</item>
    </style>

    <style name="ButtonBase.ButtonGreen">
        <item name="android:background">@drawable/background_selector_green</item>
    </style>

    <style name="ButtonBase.ButtonViolet">
        <item name="android:background">@drawable/background_selector_violet</item>
    </style>

    <style name="ButtonBase.ButtonRedDark">
        <item name="android:background">@drawable/background_selector_red_darker</item>
    </style>

    <style name="ButtonBase.ButtonGray">
        <item name="android:background">@drawable/background_selector_gray</item>
    </style>

</resources>