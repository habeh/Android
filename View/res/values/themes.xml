<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- the theme applied to the application or activity -->
    <style name="OffLineMessageTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/OffLineMessageActionBar</item>
        <item name="android:actionMenuTextColor">@color/solid_white</item>
        <item name="android:actionBarTabTextStyle">@style/OffLineMessageActionBarTabText</item>
    </style>

    <!-- ActionBar styles -->
    <style name="OffLineMessageActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/background_shape_orange_dark</item>
        <item name="android:backgroundStacked">@drawable/background_shape_snow</item>
        <item name="android:backgroundSplit">@drawable/background_shape_orange_dark</item>
        <item name="android:titleTextStyle">@style/OffLineMessageActionBarTitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="OffLineMessageActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/solid_white</item>
    </style>

    <!-- ActionBar tabs text styles -->
    <style name="OffLineMessageActionBarTabText" parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@color/solid_orange_dark</item>
    </style>

</resources>